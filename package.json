{
  "name": "OneClickRun",
  "displayName": "OneClickRun",
  "description": "A productivity-focused extension for running automation scripts with terminal & debug , including Playwright & Allure.",
  "version": "3.3.6",
  "publisher": "yuvarajpm1853",
  "engines": {
    "vscode": "^1.100.1"
  },
  "icon": "image/icon.png",
  "categories": [
    "Testing",
    "Debuggers",
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copyRelativePath.Workspace",
        "title": "Copy Relative Path (Workspace)"
      },
      {
        "command": "oneClickRun.ExecutionScripts",
        "title": "Run via executionScripts.sh"
      },
      {
        "command": "oneClickRun.ExecutionScriptsInDebug",
        "title": "Run via executionScripts.sh (Debug)"
      },
      {
        "command": "oneClickRun.allureServe",
        "title": "(Allure) Serve Report"
      },
      {
        "command": "oneClickRun.allureGenerate",
        "title": "(Allure) Generate Report"
      },
      {
        "command": "oneClickRun.runWithPlaywright",
        "title": "Run with playwright"
      },
      {
        "command": "oneClickRun.setHeadlessTrue",
        "title": "Set headless to true"
      },
      {
        "command": "oneClickRun.setHeadlessFalse",
        "title": "Set headless to false"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "copyRelativePath.Workspace",
          "group": "0_copypath@1"
        },
        {
          "command": "oneClickRun.ExecutionScripts",
          "group": "0_copypath@2"
        },
        {
          "command": "oneClickRun.ExecutionScriptsInDebug",
          "group": "0_copypath@3"
        },
        {
          "command": "oneClickRun.runWithPlaywright",
          "group": "0_copypath@6",
          "when": "resourceFilename =~ /spec\\.js$/ && workspace.hasPlaywright"
        },
        {
          "command": "oneClickRun.setHeadlessTrue",
          "when": "oneClickRun.hasHeadless && oneClickRun.headlessValue == false",
          "group": "0_copypath@7"
        },
        {
          "command": "oneClickRun.setHeadlessFalse",
          "when": "oneClickRun.hasHeadless && oneClickRun.headlessValue == true",
          "group": "0_copypath@7"
        }
      ],
      "editor/title/context": [
        {
          "command": "oneClickRun.ExecutionScripts",
          "group": "0_cutcopypaste@2"
        },
        {
          "command": "oneClickRun.ExecutionScriptsInDebug",
          "group": "0_cutcopypaste@3"
        },
        {
          "command": "copyRelativePath.Workspace",
          "group": "0_cutcopypaste@1"
        },
        {
          "command": "oneClickRun.runWithPlaywright",
          "group": "0_cutcopypaste@6",
          "when": "resourceExtname == '.js' && workspace.hasPlaywright"
        }
      ],
      "editor/context": [
        {
          "command": "oneClickRun.ExecutionScripts",
          "group": "0_cutcopypaste@2",
          "when": "resourceExtname == 'js' || resourceExtname == 'ts'"
        },
        {
          "command": "oneClickRun.ExecutionScriptsInDebug",
          "group": "0_cutcopypaste@3",
          "when": "resourceExtname == 'js' || resourceExtname == 'ts'"
        },
        {
          "command": "copyRelativePath.Workspace",
          "group": "0_cutcopypaste@1"
        },
        {
          "command": "oneClickRun.allureServe",
          "group": "0_cutcopypaste@2"
        },
        {
          "command": "oneClickRun.allureGenerate",
          "group": "0_cutcopypaste@3"
        },
        {
          "command": "oneClickRun.runWithPlaywright",
          "group": "0_cutcopypaste@6",
          "when": "resourceFilename =~ /\\.spec\\.js$/ && workspace.hasPlaywright"
        }
      ]
    },
    "keybindings": [
      {
        "command": "oneClickRun.ExecutionScripts",
        "key": "shift+alt+x",
        "when": "editorTextFocus"
      },
      {
        "command": "oneClickRun.ExecutionScriptsInDebug",
        "key": "shift+alt+d",
        "when": "editorTextFocus"
      },
      {
        "command": "copyRelativePath.Workspace",
        "key": "shift+alt+c",
        "when": "editorTextFocus"
      },
      {
        "command": "oneClickRun.allureServe",
        "key": "shift+alt+s",
        "when": "editorTextFocus"
      },
      {
        "command": "oneClickRun.allureGenerate",
        "key": "shift+alt+g",
        "when": "editorTextFocus"
      },
      {
        "command": "oneClickRun.runWithPlaywright",
        "key": "shift+alt+p",
        "when": "editorTextFocus"
      }
    ]
  },
  "keywords": [
    "Automation Solution",
    "playwright",
    "test automation",
    "script runner",
    "allure",
    "debug",
    "one click run",
    "testing",
    "automation testing"
  ],
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.39.2",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yuvarajpm1853/Run-It-VS-Code-Extension"
  }
}