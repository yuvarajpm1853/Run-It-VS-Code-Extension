{
  "name": "RunIt",
  "displayName": "Run it",
  "description": "Provide options to run test scripts (.js ) via executeScripts & playwright, handles allure report along with copying relative path",
  "version": "3.1.0",
  "publisher": "yuvaraj",
  "engines": {
    "vscode": "^1.100.1"
  },
  "categories": [
    "Other",
    "Debugger",
    "AutomationTester"
  ],
  "activationEvents": ["*"],
  "main": "extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copyRelativePath.Workspace",
        "title": "Copy Relative Path (Workspace)"
      },
      {
        "command": "run.ExecutionScripts",
        "title": "Run via executionScripts.sh"
      },
      {
        "command": "run.ExecutionScriptsInDebug",
        "title": "Run via executionScripts.sh (Debug)"
      },
      {
        "command": "run.allureServe",
        "title": "(Allure) Serve Report"
      },
      {
        "command": "run.allureGenerate",
        "title": "(Allure) Generate Report"
      },
      {
        "command": "run.runWithPlaywright",
        "title": "Run with Playwright"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "copyRelativePath.Workspace",
          "group": "0_copypath@1"
        },
        {
          "command": "run.ExecutionScripts",
          "group": "0_copypath@4"
        },
        {
          "command": "run.ExecutionScriptsInDebug",
          "group": "0_copypath@5"
        },
        {
          "command": "run.allureServe",
          "group": "0_copypath@2"
        },
        {
          "command": "run.allureGenerate",
          "group": "0_copypath@3"
        },
        {
        "command": "run.runWithPlaywright",
          "group": "0_copypath@6",
          "when": "resourceFilename =~ /spec\\.js$/ && workspace.hasPlaywright"
        }
      ],
      "editor/title/context": [
        {
          "command": "run.ExecutionScripts",
          "group": "0_cutcopypaste@4"
        },
        {
          "command": "run.ExecutionScriptsInDebug",
          "group": "0_cutcopypaste@5"
        },
        {
          "command": "copyRelativePath.Workspace",
          "group": "0_cutcopypaste@1"
        },
        {
          "command": "run.allureServe",
          "group": "0_cutcopypaste@2"
        },
        {
          "command": "run.allureGenerate",
          "group": "0_cutcopypaste@3"
        },
        {
        "command": "run.runWithPlaywright",
          "group": "0_cutcopypaste@6",
          "when": "resourceExtname == '.js' && workspace.hasPlaywright"
        }
      ],
      "editor/context": [
        {
          "command": "run.ExecutionScripts",
          "group": "0_cutcopypaste@4",
          "when": "resourceExtname =~ /\\.(js|ts)$/ || resourceFilename =~ /(package\\.json|package-lock\\.json|yarn\\.lock|tsconfig\\.json|\\.nvmrc|\\.node-version)$/ || editorLangId == 'javascript' || editorLangId == 'typescript'"
        },
        {
          "command": "run.ExecutionScriptsInDebug",
          "group": "0_cutcopypaste@5",
          "when": "resourceExtname =~ /\\.(js|ts)$/ || resourceFilename =~ /(package\\.json|package-lock\\.json|yarn\\.lock|tsconfig\\.json|\\.nvmrc|\\.node-version)$/ || editorLangId == 'javascript' || editorLangId == 'typescript'"
        },
        {
          "command": "copyRelativePath.Workspace",
          "group": "0_cutcopypaste@1"
        },
        {
          "command": "run.allureServe",
          "group": "0_cutcopypaste@2"
        },
        {
          "command": "run.allureGenerate",
          "group": "0_cutcopypaste@3"
        },
        {
        "command": "run.runWithPlaywright",
          "group": "0_cutcopypaste@6",
          "when": "editorLangId == 'javascript' && workspace.hasPlaywright"
        }

      ]
    },
    "keybindings": [
      {
        "command": "run.ExecutionScripts",
        "key": "shift+alt+x",
        "when": "editorTextFocus"
      },
      {
        "command": "run.ExecutionScriptsInDebug",
        "key": "shift+alt+d",
        "when": "editorTextFocus"
      },
      {
        "command": "copyRelativePath.Workspace",
        "key": "shift+alt+c",
        "when": "editorTextFocus"
      },
      {
        "command": "run.allureServe",
        "key": "shift+alt+s",
        "when": "editorTextFocus"
      },
      {
        "command": "run.allureGenerate",
        "key": "shift+alt+g",
        "when": "editorTextFocus"
      },
      {
        "command": "run.runWithPlaywright",
        "key": "shift+alt+p",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.39.2",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}